<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Edit User</title>
  <script src="https://code.jquery.com/jquery-2.2.4.min.js"
    integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
  <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<body class="container">
  <div class="card">
    <div class="card-body">
      <div class="row">
        <% if (user) { %>
          <form class="col s12" action="/users/update/<%= user.user_id %>" method="post">
            <div class="row">
              <div class="input-field col s12">
                <input required maxlength="50" placeholder="First Name" name="first_name" id="first_name" type="text" value="<%- user.first_name %>"
                  class="validate">
                <label for="first_name">First Name</label>
              </div>
              <div class="input-field col s12">
                <input maxlength="50" placeholder="Last Name" required name="last_name" id="last_name" type="text" class="validate" value="<%- user.last_name %>">
                <label for="last_name">Last Name</label>
              </div>
              <div class="input-field col s12">
                <select name="gender_id" id="gender_id">
                  <% genders.forEach((gender)=> { %>
                    <% var selected=( gender.gender_id===user.gender_id ) ? "selected" : "" ; %>
                      <option <%=selected %> value="<%- gender.gender_id %>"><%- gender.name %>
                      </option>
                    <% }); 
                  %>
                </select>
                <label>Gender</label>
              </div>
              <div class="input-field col s12">
                <input required type="text" name="birthday" id="birthday" value="<%- user.birthday.toDateString('yyyyMMDdd') %>" class="datepicker">
                <label>Birthday</label>
              </div>
              <div class="input-field col s12">
                <input type="submit" class="btn btn-info" value="Save" />
              </div>
            </div>
          </form>
        <% } %>
      </div>
    </div>
  </div>
</body>
<script>
  $(document).ready(function () {
    $('select').formSelect();
    $('.datepicker').datepicker();
  });
</script>

</html>